<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
             xmlns:kie="urn:import:org.uberfire.ext.widgets.common.client.common.popups">

  <ui:with field="i18n"
           type="org.uberfire.ext.widgets.core.client.resources.i18n.CoreConstants"/>
  <ui:style>
    .mandatory-field {
      color: red;
    }
  </ui:style>

  <kie:BaseModal ui:field="popup" title="{i18n.CreateRepository}" dataBackdrop="STATIC" dataKeyboard="true" fade="true">
    <b:ModalBody>
      <b:Well>
        <b:FieldSet>
          <b:Legend>
            <ui:text from="{i18n.RepoInformation}"/>
            <small>
              <ui:text from="{i18n.IsRequired}"/>
            </small>
          </b:Legend>
          <b:FormGroup ui:field="nameGroup">
            <b:FormLabel for="name">
              <span class="{style.mandatory-field}">*</span>
              <ui:text from="{i18n.RepoName}"/>
            </b:FormLabel>
            <b:TextBox b:id="name" ui:field="nameTextBox" placeholder="{i18n.RepoNameHolder}"/>
            <b:HelpBlock ui:field="nameHelpBlock"/>
          </b:FormGroup>
          <b:FormGroup ui:field="organizationalUnitGroup">
            <b:FormLabel for="ou" ui:field="ouLabel">
              <span ui:field="isOUMandatory" class="{style.mandatory-field}">*</span>
              <ui:text from="{i18n.OrganizationalUnit}"/>
            </b:FormLabel>
            <b:ListBox b:id="ou" ui:field="organizationalUnitDropdown"/>
            <b:HelpBlock ui:field="organizationalUnitHelpBlock"/>
          </b:FormGroup>
        </b:FieldSet>
      </b:Well>
    </b:ModalBody>
    <b:ModalFooter>
      <b:Button type="DEFAULT" ui:field="cancel">
        <ui:text from="{i18n.Cancel}"/>
      </b:Button>
      <b:Button icon="FOLDER_O" type="PRIMARY" ui:field="create">
        <ui:text from="{i18n.Create}"/>
      </b:Button>
    </b:ModalFooter>
  </kie:BaseModal>

</ui:UiBinder>