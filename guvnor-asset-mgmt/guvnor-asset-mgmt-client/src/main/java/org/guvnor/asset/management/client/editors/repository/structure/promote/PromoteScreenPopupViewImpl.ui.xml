<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:gwt='urn:import:com.google.gwt.user.client.ui'
             xmlns:bootstrap='urn:import:org.gwtbootstrap3.client.ui'>

  <ui:with field="i18n"
           type="org.guvnor.asset.management.client.i18n.Constants"/>


  <ui:style>
    .mandatory-field {
      color: red;
    }
  </ui:style>

  <gwt:HTMLPanel>
    <bootstrap:Well>
      <bootstrap:FieldSet>

        <bootstrap:FormGroup ui:field="repositoryTextGroup">
          <bootstrap:FormLabel for="repositoryText">
            <ui:text from="{i18n.Repository}"/>
          </bootstrap:FormLabel>
          <bootstrap:TextBox bootstrap:id="repositoryText" ui:field="repositoryText" placeholder="{i18n.Repository}"/>
          <bootstrap:HelpBlock ui:field="repositoryTextHelpBlock"/>
        </bootstrap:FormGroup>

        <bootstrap:FormGroup ui:field="sourceBranchTextGroup">
          <bootstrap:FormLabel for="sourceBranchText">
            <ui:text from="{i18n.Source_Branch}"/>
          </bootstrap:FormLabel>
          <bootstrap:TextBox bootstrap:id="sourceBranchText" ui:field="sourceBranchText" placeholder="{i18n.Source_Branch}"/>
          <bootstrap:HelpBlock ui:field="sourceBranchTextHelpBlock"/>
        </bootstrap:FormGroup>


        <bootstrap:FormGroup ui:field="targetBranchListBoxGroup">
          <bootstrap:FormLabel for="targetBranchListBox">
            <span class="{style.mandatory-field}">*</span>
            <ui:text from="{i18n.Target_Branch}"/>
          </bootstrap:FormLabel>
          <bootstrap:ListBox bootstrap:id="targetBranchListBox" ui:field="targetBranchListBox"/>
          <bootstrap:HelpBlock ui:field="targetBranchListBoxHelpBlock"/>
        </bootstrap:FormGroup>


      </bootstrap:FieldSet>
    </bootstrap:Well>
  </gwt:HTMLPanel>
</ui:UiBinder>