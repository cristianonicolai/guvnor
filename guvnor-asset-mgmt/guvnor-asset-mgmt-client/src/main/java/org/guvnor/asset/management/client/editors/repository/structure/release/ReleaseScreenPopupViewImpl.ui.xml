<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:gwt='urn:import:com.google.gwt.user.client.ui'
             xmlns:bootstrap='urn:import:org.gwtbootstrap3.client.ui'>

  <ui:with field="i18n"
           type="org.guvnor.asset.management.client.i18n.Constants"/>


  <ui:style>
    .mandatory-field {
      color: red;
    }
  </ui:style>

  <gwt:HTMLPanel>
    <bootstrap:Well>
      <bootstrap:FieldSet>


        <bootstrap:FormGroup ui:field="repositoryTextGroup">
          <bootstrap:FormLabel for="repositoryText">
            <ui:text from="{i18n.Repository}"/>
          </bootstrap:FormLabel>
          <bootstrap:TextBox bootstrap:id="repositoryText" ui:field="repositoryText" placeholder="{i18n.Repository}"/>
          <bootstrap:HelpBlock ui:field="repositoryTextHelpBlock"/>
        </bootstrap:FormGroup>

        <bootstrap:FormGroup ui:field="sourceBranchTextGroup">
          <bootstrap:FormLabel for="sourceBranchText">
            <ui:text from="{i18n.Source_Branch}"/>
          </bootstrap:FormLabel>
          <bootstrap:TextBox bootstrap:id="sourceBranchText" ui:field="sourceBranchText" placeholder="{i18n.Source_Branch}"/>
          <bootstrap:HelpBlock ui:field="sourceBranchTextHelpBlock"/>
        </bootstrap:FormGroup>

        <bootstrap:FormGroup ui:field="versionTextGroup">
          <bootstrap:FormLabel for="verionText">
            <span class="{style.mandatory-field}">*</span>
            <ui:text from="{i18n.ReleaseVersion}"/>
          </bootstrap:FormLabel>
          <bootstrap:TextBox bootstrap:id="versionText" ui:field="versionText" placeholder="{i18n.Version}"/>
          <bootstrap:HelpBlock ui:field="versionTextHelpBlock"/>
        </bootstrap:FormGroup>

        <bootstrap:FormGroup ui:field="deployToRuntimeTextGroup">
          <bootstrap:FormLabel for="deployToRuntimeCheck">
            <span class="{style.mandatory-field}">*</span>
            <ui:text from="{i18n.Deploy_To_Runtime}"/>
          </bootstrap:FormLabel>
          <bootstrap:CheckBox bootstrap:id="deployToRuntimeCheck" ui:field="deployToRuntimeCheck"/>
          <bootstrap:HelpBlock ui:field="deployToRuntimeHelpBlock"/>
        </bootstrap:FormGroup>

        <bootstrap:FormGroup ui:field="userNameTextGroup">
          <bootstrap:FormLabel for="userNameText">
            <span class="{style.mandatory-field}">*</span>
            <ui:text from="{i18n.User_Name}"/>
          </bootstrap:FormLabel>
          <bootstrap:TextBox bootstrap:id="userNameText" ui:field="userNameText" placeholder="{i18n.User_Name}"/>
          <bootstrap:HelpBlock ui:field="userNameTextHelpBlock"/>
        </bootstrap:FormGroup>

        <bootstrap:FormGroup ui:field="passwordTextGroup">
          <bootstrap:FormLabel for="passwordText">
            <span class="{style.mandatory-field}">*</span>
            <ui:text from="{i18n.Password}"/>
          </bootstrap:FormLabel>
          <bootstrap:Input type="PASSWORD" bootstrap:id="passwordText" ui:field="passwordText" placeholder="{i18n.Password}"/>
          <bootstrap:HelpBlock ui:field="passwordTextHelpBlock"/>
        </bootstrap:FormGroup>

        <bootstrap:FormGroup ui:field="serverURLTextGroup">
          <bootstrap:FormLabel for="serverURLText">
            <span class="{style.mandatory-field}">*</span>
            <ui:text from="{i18n.Server_URL}"/>
          </bootstrap:FormLabel>
          <bootstrap:TextBox bootstrap:id="serverURLText" ui:field="serverURLText" placeholder="{i18n.Server_URL}"/>
          <bootstrap:HelpBlock ui:field="serverURLTextHelpBlock"/>
        </bootstrap:FormGroup>
      </bootstrap:FieldSet>
    </bootstrap:Well>
  </gwt:HTMLPanel>
</ui:UiBinder>