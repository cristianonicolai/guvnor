<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:gwt='urn:import:com.google.gwt.user.client.ui'
             xmlns:bootstrap='urn:import:org.gwtbootstrap3.client.ui'>

  <ui:with field="i18n"
           type="org.guvnor.asset.management.client.i18n.Constants"/>


  <gwt:HTMLPanel>
    <bootstrap:Form type="INLINE">
      <bootstrap:Row>
        <bootstrap:Column size="MD_5">
          <bootstrap:FormLabel for="chooseRepositoryBox">
            <ui:text from="{i18n.Choose_Repository}"/>
          </bootstrap:FormLabel>
        </bootstrap:Column>
        <bootstrap:Column size="MD_5">
          <bootstrap:ListBox ui:field="chooseRepositoryBox"/>
        </bootstrap:Column>
      </bootstrap:Row>

      <bootstrap:Row>
        <bootstrap:Column size="MD_5">
          <bootstrap:FormLabel for="chooseBranchBox">
            <ui:text from="{i18n.Choose_Branch}"/>
          </bootstrap:FormLabel>
        </bootstrap:Column>
        <bootstrap:Column size="MD_5">
          <bootstrap:ListBox ui:field="chooseBranchBox"/>
        </bootstrap:Column>
      </bootstrap:Row>

      <bootstrap:Row>
        <bootstrap:Column size="MD_5">
          <bootstrap:FormLabel for="chooseProjectBox">
            <ui:text from="{i18n.Choose_Project}"/>
          </bootstrap:FormLabel>
        </bootstrap:Column>
        <bootstrap:Column size="MD_5">
          <bootstrap:ListBox ui:field="chooseProjectBox"/>
        </bootstrap:Column>

      </bootstrap:Row>

      <bootstrap:Row ui:field="deployToRuntimeRow">
        <bootstrap:Column size="MD_5">
          <bootstrap:FormLabel for="deployToRuntimeCheck">
            <ui:text from="{i18n.Deploy_To_Runtime}"/>
          </bootstrap:FormLabel>
        </bootstrap:Column>
        <bootstrap:Column size="MD_5">
          <bootstrap:CheckBox ui:field="deployToRuntimeCheck"/>
        </bootstrap:Column>

      </bootstrap:Row>

      <bootstrap:Row ui:field="usernameRow">
        <bootstrap:Column size="MD_5">
          <bootstrap:FormLabel for="userNameText">
            <ui:text from="{i18n.User_Name}"/>
          </bootstrap:FormLabel>
        </bootstrap:Column>
        <bootstrap:Column size="MD_5">
          <bootstrap:TextBox ui:field="userNameText" placeholder="{i18n.User_Name}"/>
        </bootstrap:Column>
      </bootstrap:Row>

      <bootstrap:Row ui:field="passwordRow">
        <bootstrap:Column size="MD_5">
          <bootstrap:FormLabel for="passwordText">
            <ui:text from="{i18n.Password}"/>
          </bootstrap:FormLabel>
        </bootstrap:Column>
        <bootstrap:Column size="MD_5">
          <bootstrap:Input type="PASSWORD" ui:field="passwordText" placeholder="{i18n.Password}"/>
        </bootstrap:Column>

      </bootstrap:Row>
      <bootstrap:Row ui:field="serverURLRow">
        <bootstrap:Column size="MD_5">
          <bootstrap:FormLabel for="serverURLText">
            <ui:text from="{i18n.Server_URL}"/>
          </bootstrap:FormLabel>
        </bootstrap:Column>
        <bootstrap:Column size="MD_5">
          <bootstrap:TextBox ui:field="serverURLText" placeholder="{i18n.Server_URL}"/>
        </bootstrap:Column>

      </bootstrap:Row>

      <bootstrap:Row>
        <bootstrap:Column size="MD_5">
          <bootstrap:Button type="PRIMARY" ui:field='buildButton'>
            <ui:text from="{i18n.Build_Project}"/>
          </bootstrap:Button>
        </bootstrap:Column>

      </bootstrap:Row>
    </bootstrap:Form>
  </gwt:HTMLPanel>
</ui:UiBinder>