<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:gwt='urn:import:com.google.gwt.user.client.ui'
             xmlns:bootstrap='urn:import:org.gwtbootstrap3.client.ui'>

  <ui:with field="i18n"
           type="org.guvnor.asset.management.client.i18n.Constants"/>


  <gwt:HTMLPanel>
    <bootstrap:Form type="INLINE">


      <bootstrap:Row>
        <bootstrap:Column size="MD_2">
          <bootstrap:FormLabel for="sourceBranchBox">
            <ui:text from="{i18n.Source_Branch}"/>
          </bootstrap:FormLabel>
        </bootstrap:Column>
        <bootstrap:Column size="MD_2">
          <bootstrap:TextBox ui:field="sourceBranchBox" placeholder="{i18n.Source_Branch}"/>
        </bootstrap:Column>

      </bootstrap:Row>

      <bootstrap:Row>
        <bootstrap:Column size="MD_2">
          <bootstrap:FormLabel for="filesInTheBranchList">
            <ui:text from="{i18n.Files_In_The_Branch}"/>
          </bootstrap:FormLabel>
        </bootstrap:Column>
        <bootstrap:Column size="MD_2">
          <bootstrap:ListBox ui:field="filesInTheBranchList"/>
        </bootstrap:Column>
      </bootstrap:Row>

      <bootstrap:Row>
        <bootstrap:Column size="MD_2" offset="MD_2">
          <bootstrap:Button type="PRIMARY" ui:field='promoteSelectedFilesButton'>
            <ui:text from="{i18n.Promote_Selected}"/>
          </bootstrap:Button>
          <bootstrap:Button type="PRIMARY" ui:field='promoteAllFilesButton'>
            <ui:text from="{i18n.Promote_All}"/>
          </bootstrap:Button>
        </bootstrap:Column>

      </bootstrap:Row>

      <bootstrap:Row>
        <bootstrap:Column size="MD_2">
          <bootstrap:FormLabel for="filesToPromoteList">
            <ui:text from="{i18n.Files_To_Promote}"/>
          </bootstrap:FormLabel>
        </bootstrap:Column>
        <bootstrap:Column size="MD_2">
          <bootstrap:ListBox ui:field="filesToPromoteList"/>
        </bootstrap:Column>
      </bootstrap:Row>

      <bootstrap:Row>
        <bootstrap:Column size="MD_2">
          <bootstrap:FormLabel for="requiresReviewCheckBox">
            <ui:text from="{i18n.Requires_Review}"/>
          </bootstrap:FormLabel>
        </bootstrap:Column>
        <bootstrap:Column size="MD_2">
          <bootstrap:CheckBox ui:field="requiresReviewCheckBox"/>
        </bootstrap:Column>

      </bootstrap:Row>

    </bootstrap:Form>
  </gwt:HTMLPanel>
</ui:UiBinder>