<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui">

    <ui:with field="i18n" type="org.guvnor.asset.management.client.i18n.Constants"/>

    <g:HTMLPanel>
        <b:Container fluid="true">
            <b:Row>
                <b:Column size="MD_12">
                    <b:Form type="HORIZONTAL">
                        <b:FieldSet>

                            <b:FormGroup ui:field="nameGroup">
                                <b:Column size="MD_5">
                                    <b:FormLabel for="name" text="{i18n.RepoName}" showRequiredIndicator="true"/>
                                </b:Column>
                                <b:Column size="MD_7">
                                    <b:TextBox b:id="name" ui:field="nameTextBox" placeholder="{i18n.RepoNameHolder}"/>
                                    <b:HelpBlock ui:field="nameHelpBlock"/>
                                </b:Column>
                            </b:FormGroup>

                            <b:FormGroup ui:field="organizationalUnitGroup">
                                <b:Column size="MD_5">
                                    <b:FormLabel for="ou" text="{i18n.OrganizationalUnit}" showRequiredIndicator="true"/>
                                </b:Column>
                                <b:Column size="MD_7">
                                    <b:ListBox b:id="ou" ui:field="organizationalUnitDropdown"/>
                                    <b:HelpBlock ui:field="organizationalUnitHelpBlock"/>
                                </b:Column>
                            </b:FormGroup>

                            <b:FormGroup ui:field="managedReposiotryGroup">
                                <b:Column size="MD_12">
                                    <b:CheckBox ui:field="isManagedRepository" text="{i18n.ManagedRepository}"/>
                                    <b:HelpBlock ui:field="isManagedRepositoryHelpBlock"/>
                                </b:Column>
                            </b:FormGroup>

                        </b:FieldSet>
                    </b:Form>
                </b:Column>
            </b:Row>
        </b:Container>

    </g:HTMLPanel>
</ui:UiBinder>