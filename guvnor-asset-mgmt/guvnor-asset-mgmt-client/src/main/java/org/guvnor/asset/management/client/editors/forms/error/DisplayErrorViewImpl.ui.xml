<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:b='urn:import:org.gwtbootstrap3.client.ui'>

  <ui:with field="i18n"
           type="org.guvnor.asset.management.client.i18n.Constants"/>

  <ui:style>
    .highlighted-field {
      font-style: italic;
      font-weight: bold
    }
  </ui:style>
  <g:HTMLPanel>
    <b:Well>
      <b:FieldSet>
        <b:Legend>
          <ui:text from="{i18n.UnexpectedError}"/>
        </b:Legend>

        <b:FormGroup ui:field="processNameGroup">
          <b:FormLabel for="processName">
            <span class="{style.highlighted-field}">
              <ui:text from="{i18n.ProcessName}"/>
            </span>
          </b:FormLabel>
          <b:TextBox b:id="processName" ui:field="processNameTextBox" placeholder=""/>
        </b:FormGroup>


        <b:FormGroup ui:field="showErrorGroup">
          <b:TextArea ui:field="errorBox" styleName="col-md-10"/>
        </b:FormGroup>
      </b:FieldSet>
    </b:Well>
  </g:HTMLPanel>
</ui:UiBinder>